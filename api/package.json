{
  "name": "cloub-sm-api",
  "version": "1.0.0",
  "description": "Express API service for the Cloub SM platform.",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "migrate": "node ./db/migrate.js",
    "lint": "npm run lint:js && npm run lint:styles",
    "lint:js": "eslint src --ext .js,.jsx,.ts,.tsx --max-warnings=0",
    "lint:js:fix": "npm run lint:js -- --fix",
    "format": "prettier . --check",
    "format:fix": "prettier . --write"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.13.1"
  },
  "devDependencies": {
    "eslint": "^8.57.1",
    "prettier": "^3.3.3"
  }
}
